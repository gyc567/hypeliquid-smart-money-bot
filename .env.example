# Telegram Bot配置（必需）
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Hyperliquid RPC配置
HYPERLIQUID_RPC_URL=https://rpc.hyperliquid.xyz/evm

# 数据库配置
DATABASE_PATH=/app/data/smart_money_monitor.db

# 监控配置
DEFAULT_SCAN_INTERVAL=60
MAX_ADDRESSES_PER_USER=20

# 性能配置
API_RATE_LIMIT=2
REQUEST_TIMEOUT=10

# 日志配置
LOG_LEVEL=INFO

# 反垃圾配置
MAX_USER_MESSAGES_PER_MINUTE=10

# 可选：管理员配置（用于接收系统警报）
ADMIN_TELEGRAM_ID=your_admin_telegram_id

# 可选：监控配置
ENABLE_MONITORING=false
PROMETHEUS_PORT=9090

# 可选：日志配置
LOG_ROTATION_DAYS=7
LOG_MAX_SIZE=100MB